<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')  %>

<body>
    <h1>My Blog</h1>
  <%- include('./partials/nav.ejs')  %>

   <div class="blogs content">
    <h2>Content</h2>
    <% if(blogs.length > 0 ) { %>
      <%  blogs.forEach(blog => { %>
        <a class="'single" href="/blogs/<%= blog._id %>" >
        <h2> <%= blog.title %> </h2>
        <p> <%= blog.snippet %> </p>
        </a>
     <% }) %>

   <% } else { %>
   <p>There's no data to show</p>
  <% } %>
</div>
</body>
<%- include('./partials/footer') %>
</html>